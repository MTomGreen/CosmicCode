package green.math;

import green.detector.Detector;
import green.objects.HitEvent;
import green.util.DetectorUtils;

public class ConstantsGenerator {
	
	public static void getConstantsFor(int a, int b, int  c){
		Detector detectorA = DetectorUtils.getDetectorFromID(a);
		Detector detectorB = DetectorUtils.getDetectorFromID(b);
		Detector detectorC = DetectorUtils.getDetectorFromID(c);
		
		Vector3Double ACoords = new Vector3Double(detectorA.getLatitude(), detectorA.getAltitude(), detectorA.getLongitude());
		Vector3Double BCoords = new Vector3Double(detectorB.getLatitude()-ACoords.getX(), detectorB.getAltitude()-ACoords.getY(), detectorB.getLongitude()-ACoords.getZ());
		Vector3Double CCoords = new Vector3Double(detectorC.getLatitude()-ACoords.getX(), detectorC.getAltitude()-ACoords.getY(), detectorC.getLongitude()-ACoords.getZ());
		
		System.out.println("A: [0,0,0]");
		System.out.println("B: " + BCoords.toString());
		System.out.println("C: " + CCoords.toString());
	}

}
