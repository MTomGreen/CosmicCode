package green.util;

import java.io.File;
import java.io.IOException;

import green.detector.Detector;

public class FileUtils {
	
	public static final String base_dir = new File("").getAbsolutePath();
	
	public static void getEventLogForDetector(Detector d){
		File logFile = new File(base_dir+"/logs/"+d.getName()+".dat");
		if(!logFile.exists()){
			
		}
	}
	
	public static void moveFilesFromDownloads(){
		File fileToCopy = null;
		File[] files = new File(base_dir+"/data/temp").listFiles();
		for(File file : files){
			fileToCopy = file;
			file.delete();
			break;
		}
		File newFile = new File(base_dir+"/data");
		newFile = fileToCopy;
		try {
			newFile.createNewFile();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}

}
